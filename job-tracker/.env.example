# Deployment Mode
# "self_hosted" = Users run their own instance with their own API keys (no subscriptions)
DEPLOYMENT_MODE="self_hosted"

# Database
DATABASE_URL="file:./dev.db"

# Authentication
JWT_SECRET="your-very-secure-jwt-secret-key-here"

# AI Services (Only needed if DEPLOYMENT_MODE=saas, optional for self_hosted)
OPENAI_API_KEY="your-openai-api-key-here"

# Web Search for AI (Optional but recommended for real salary data)
TAVILY_API_KEY="your-tavily-api-key-here"

# Optional: Ollama for local AI (if you prefer local models)
OLLAMA_API_URL="http://localhost:11434"

# Optional: Other search APIs (alternatives to Tavily)
# PERPLEXITY_API_KEY="your-perplexity-api-key-here"
# SERPAPI_KEY="your-serpapi-key-here"
# BRAVE_SEARCH_API_KEY="your-brave-search-api-key-here"